<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trainingMethodTV"
            android:padding="5dp"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Metoda treningowa"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/header"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/addTraininglabel"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:text="Dodaj kolejny Trening"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/addTrainigIV"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_input_add"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/addTraininglabel"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="20dp"
            android:text="Zrobione"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/doneTrainingIV"
            android:layout_below="@id/addTrainigIV"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@android:drawable/ic_input_add"/>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_above="@id/footer"
        android:id="@+id/trainingsLV">

    </ListView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saviola44.strengthbuilding">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ShowAllExercisesActivity" />
        <activity android:name=".Activities.SelectTrainingMethodActivity" />
        <activity android:name=".Activities.AddTrainingsActivity"
            android:screenOrientation="userPortrait"/>
        <activity android:name=".Activities.AddTrainingActivity" />
        <activity android:name=".Activities.DoTrainingActivity"
            android:screenOrientation="userPortrait"/>
        <activity android:name=".Activities.DisplayTrainingPlanActivity"/>
        <activity android:name=".Activities.DisplayTrainingActivity" />
        <activity android:name=".Activities.TrainingsHistoryActivity" />
    </application>

</manifest>
